@import 'constants'
@import 'fonts'

::-webkit-scrollbar
  width 0.3rem
  height 0.3rem
::-webkit-scrollbar-thumb
  background-color var(--accent)
  border-radius 100vw

body::-webkit-scrollbar
  width 0.45rem
  height 0.45rem
body::-webkit-scrollbar:hover
  width 0.75rem
  height 0.75rem
  background-color var(--bg-light)
body::-webkit-scrollbar-thumb
  border 0.15rem solid var(--bg-light)

:root
  --nav-height 4rem
  --transparent hsla(0,0,0,0)
  scrollbar-color var(--accent) var(--bg-light)

*,
::after,
::before
  margin 0
  padding 0
  box-sizing border-box

#portfolio
  max-width 100vw
  min-height 100vh

body
  background-color var(--bg)
  font-family 'Kiwi Maru', serif
  color var(--fg)

h1,
h2,
h3,
h4,
h5,
h6
  padding-top: 0.5rem
  font-family Quicksand, sans-serif
  color var(--accent)

h1
  font-size 2rem
  padding-bottom 1.2rem

h2
  font-size 1.8rem
  padding-bottom 1.2rem

h3
  font-size 1.6rem
  padding-bottom 1.2rem

h4
  font-size 1.4rem
  padding-bottom 1rem

h5
  font-size 1.2rem
  padding-bottom 1rem

h6
  font-size 1.1rem
  padding-bottom 1rem

p,
i,
a,
strong
  font-size 1rem
  font-family 'Kiwi Maru', serif
  color var(--fg)

p
  padding-top 0.6rem
  width clamp(1ch, 100%, 75ch)

a
  text-decoration none
  color var(--accent)

  transition color transition-short ease-in-out

  &:hover
    color var(--accent-4)

  &:active
    color var(--fg)

li
  list-style none

.pagewide
  max-width calc(100vw - 2rem)
  width tablet-size

  p
    width initial

.spacer
  flex-grow: 100

button,
.button
  display block

  background-color var(--bg)
  padding 0.5rem 1.5rem

  width max-content
  height min-content

  border solid 0.15rem var(--bg-accent)
  border-radius 100vh
  outline inherit

  transition background-color ease-in-out transition-short, border-color ease-in-out transition-short

  font-family 'Quicksand', sans-serif
  font-size 1rem
  color var(--fg)

  cursor pointer

  &:hover
    background-color var(--accent-7)
    border-color var(--accent)

    color var(--accent-1)

  &:active
    background-color var(--accent-8)
    color var(--accent-2)

  @media screen and (min-width: tablet-size)
    padding 0.7rem 2.5rem

.center
  display grid
  align-content center

  > *
    grid-area 1 / 1 / 2 / 2

    text-align center

    margin auto

  h1,
  h2,
  h3,
  h4,
  h5,
  h6
    text-align initial

.checkbox
  display inline-block

  width 0.8rem
  height 0.8rem

  border-radius 0.1rem
  border var(--accent) solid 0.15rem

  &:hover
    border var(--accent-7) solid 0.2rem

  &.checked
    background var(--accent)
    clip-path polygon(0 0, 100% 0, 50% 50%, 30% 30%, 15% 45%, 50% 80%, 100% 30%, 100% 100%, 0 100%)

    &:hover
      background var(--accent-7)

input[type="text"],
input[type="email"],
textarea
  box-sizing border-box
  width 100%
  padding 0.5vh
  margin-bottom 2vh
  resize vertical

  background none
  color var(--fg)

  border none
  border-bottom solid 0.15rem var(--accent)

  transition border-bottom ease-in-out 200ms

  &:focus
    outline none
    border-bottom solid 0.15rem var(--accent-7)

  &:invalid
    outline none
    box-shadow none
    border-bottom solid 0.15rem var(--red)

.hidden
  display none
  visibility hidden
